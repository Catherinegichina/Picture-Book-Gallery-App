<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    android:backgroundTint="#673AB7"
    tools:context=".page3">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="345dp"
        android:layout_height="205dp"
        android:layout_marginTop="36dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coffee" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="323dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="323dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvtext3"
        android:layout_width="406dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:text="Kenya is the leading country in Africa that sells tea.It earns alot of revenue through this trade,therefore giving farmers income"
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <Button
        android:id="@+id/btnnext3"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtext3" />

    <Button
        android:id="@+id/btnback3"
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnnext3"
        app:layout_constraintTop_toBottomOf="@+id/tvtext3" />

</androidx.constraintlayout.widget.ConstraintLayout>